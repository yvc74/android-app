<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextLogin" parent="">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/loginEditTextColor</item>
        <item name="android:textSize">12sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/loginEditTextColor</item>
        <item name="colorControlNormal">@color/loginEditTextColor</item>
        <item name="colorControlActivated">@color/loginEditTextColor</item>
    </style>

    <style name="EditTextSignUp" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/signUpEditTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/signUpEditTextLabelColor</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/signUpEditTextColor</item>
        <item name="colorControlNormal">@color/signUpEditTextColor</item>
        <item name="colorControlActivated">@color/signUpEditTextLabelColor</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">#3aa6a2</item>
        <item name="colorControlNormal">#3aa6a2</item>
    </style>

    <style name="MenuRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for ToolBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Theme for Toolbar Overlay (text and icons) -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

</resources>

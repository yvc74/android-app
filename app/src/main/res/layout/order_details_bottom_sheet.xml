<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:behavior_peekHeight="112dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/originImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_place_24dp"
            android:tint="@color/pickup" />

        <TextView
            android:id="@+id/originTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@+id/orderTypeTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Origin" />

        <ImageView
            android:id="@+id/destinationImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/originImageView"
            android:layout_below="@+id/originImageView"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_place_24dp"
            android:tint="@color/delivery" />

        <TextView
            android:id="@+id/destinationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/originTextView"
            android:layout_below="@+id/originImageView"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@+id/orderTypeTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Destination" />

        <TextView
            android:id="@+id/orderTypeTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:textAllCaps="true"
            tools:text="Import" />

        <TextView
            android:id="@+id/remainingTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/orderTypeTextView"
            android:layout_below="@+id/orderTypeTextView"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            tools:text="Remaining time\n12 hours" />

        <!-- End of Header -->

        <!-- Start of Body -->

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/destinationImageView"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            tools:background="@android:color/darker_gray"
            tools:layout_height="56dp" />

        <TextView
            android:id="@+id/pickUpTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/destinationTextView"
            android:layout_below="@+id/detailsLayout"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/order_details_bottom_sheet_pick_up_address_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/pickUpAddressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pickUpTextView"
            android:layout_alignStart="@+id/pickUpTextView"
            android:layout_below="@+id/pickUpTextView"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            tools:text="Line 1\nLine 2\nLine 3" />

        <ImageView
            android:id="@+id/pickupAddressImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/originImageView"
            android:layout_alignTop="@+id/pickUpTextView"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_place_24dp"
            android:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/deliverTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pickUpTextView"
            android:layout_alignStart="@+id/pickUpTextView"
            android:layout_below="@+id/pickUpAddressTextView"
            android:layout_marginTop="8dp"
            android:text="@string/order_details_bottom_sheet_deliver_address_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/deliverAddressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pickUpTextView"
            android:layout_alignStart="@+id/pickUpTextView"
            android:layout_below="@+id/deliverTextView"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            tools:text="Line 1\nLine 2\nLine 3" />

        <ImageView
            android:id="@+id/deliveryAddressImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/originImageView"
            android:layout_alignTop="@+id/deliverTextView"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_place_24dp"
            android:tint="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/actionsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliverAddressTextView"
            tools:background="@android:color/darker_gray"
            tools:layout_height="160dp" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

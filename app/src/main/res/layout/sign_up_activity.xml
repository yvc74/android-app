<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            >

            <TextView
                android:text="@string/sign_up_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffff"
                android:layout_marginStart="83dp"
                android:layout_marginEnd="82dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="#89cac7"
                android:gravity="center"
                android:layout_gravity="center"
                android:letterSpacing="0.01"
                android:text="¿Ya eres miembro?"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.01"
                android:layout_gravity="center"
                android:text="Inicia Sesión."
                />

        </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:theme="@style/EditTextSignUp"
            >

            <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/signUpEditTextLabelColor"
            android:hint="@string/sign_up_name_hint"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:nextFocusDown="@+id/passwordEditText"
            android:nextFocusForward="@+id/passwordEditText"
            android:textSize="19sp"
            android:drawableStart="@drawable/ic_usuario_gris"
            android:drawableLeft="@drawable/ic_usuario_gris"
            />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/EditTextSignUp"
            >

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:textColor="@color/signUpEditTextLabelColor"
                android:layout_height="wrap_content"
                android:hint="@string/sign_up_phone_hint"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:theme="@style/EditTextSignUp"
            >

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/signUpEditTextLabelColor"
                android:hint="@string/sign_up_email_hint"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/signUpEditTextLabelColor"
            android:buttonTint="@color/signUpEditTextColor"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/signUpEditTextLabelColor"
            android:buttonTint="@color/signUpEditTextColor"
            android:text="RadioButton" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:textColor="#fff"
            android:background="@drawable/ic_button_sign_up"
            android:text="@string/sign_up_send_button_text" />

        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sendButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:letterSpacing="0.01"
            android:textSize="16sp"
            android:textColor="#000"
            android:clickable="true"
            android:text="Cancelar"
            />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E8"
    android:orientation="horizontal"
    android:padding="10dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bidding_item_border"
        android:elevation="5dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/originTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_order_list_icon_origin"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Mexico DF" />

            <TextView
                android:id="@+id/destinationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_orderlist_destination"
                android:textColor="#9b9b9b"
                android:textSize="15sp"
                tools:text="Veracruz" />

            <TextView
                android:id="@+id/detailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                tools:text="Plataforma / 56 KG / Electronicos" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_order_list_type"
                android:gravity="center"
                android:padding="2dp"
                android:textAllCaps="true"
                android:textColor="#3DB549"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="EXPORT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="28dp"
                android:textColor="#9b9b9b"
                android:textSize="10sp"
                tools:text="PUJA" />

            <TextView
                android:id="@+id/timeRemaingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_order_list_more_info"
                android:paddingTop="5dp"
                android:textColor="#4a4a4a"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="2 Semanas" />

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>


</LinearLayout>
